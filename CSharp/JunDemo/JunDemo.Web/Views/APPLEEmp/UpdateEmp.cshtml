@using Abp.Web.Mvc.Extensions
@{
    ViewBag.Title = "UpdateEmp";
    Layout = "~/Views/APPLEShared/_Layout.cshtml";
}

<h2>UpdateEmp</h2>

<form class="form-horizontal" id="subscriptionForm" action="SubmitSubscriptionWithObj" method="post">
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            @Html.TextBox("Name", "", new { @class = "form-control", type = "email", placeholder = "Email" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            @Html.TextBox("Address", "", new { @class = "form-control", type = "Password", placeholder = "Password" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="button" class="btn btn-default" id="btnsave">Sign in</button>
            <button type="button" class="btn btn-default" id="btnsubmit">Sign in Form</button>
            <p id="msg" class="bg-primary"></p>
        </div>
    </div>

</form>

@section MasterPart{
@*<script src="~/Scripts/jquery-2.2.0.min.js"></script>*@
    <script type="text/javascript">
        $(function () {
            $("#btnsave").click(function () {
                var url = "SubmitSubscription";
                var name = $("#Name").val();
                var address = $("#Address").val();
                $.post(url, { Name: name, Address: address }, function (data) {
                    $("#msg").html(data);
                });

            });

            $("#btnsubmit").click(function () {
                var form = $("#subscriptionForm");
                var url = form.attr("action");
                var formData = form.serialize();
                $.post(url, formData, function (data) {
                    $("#msg").html(data);
                });

            });

        })
    </script>
    }